{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .end-container {
            max-width: 600px;
            margin: 5rem auto;
            background: #fff;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: #6c63ff;
            margin-bottom: 1rem;
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .score {
            font-size: 2.5rem;
            font-weight: bold;
            color: #FF6B6B;
        }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .buttons a {
            text-decoration: none;
            color: white;
            background: #6c63ff;
            padding: 0.8rem 1.5rem;
            border-radius: 30px;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .buttons a:hover {
            background: #4b43d1;
        }
    </style>
{% endblock %}

{% block body %}
