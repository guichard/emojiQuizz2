{% extends 'base.html.twig' %}

{% block title %}Classement - Emoji Quiz{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #FF6B6B;
            --secondary-color: #4ECDC4;
            --dark-color: #292F36;
            --light-color: #F7FFF7;
            --accent-color: #FFE66D;
        }

        body {
            position: relative;
            z-index: 0;
            background-color:rgb(219, 224, 231);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            color: var(--dark-color);
            margin: 0;
            padding: 0;
        }

        .emoji-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
            z-index: 0;
        }

        .emoji-bg img {
            position: absolute;
            width: 60px;
            height: 60px;
            opacity: 0.7;
            animation: float 10s linear infinite;
        }

        @keyframes float {
            0% {
                transform: translateY(-100vh) rotate(0deg);
            }
            100% {
                transform: translateY(100vh) rotate(360deg);
            }
        }

        .score-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            box-sizing: border-box;
            position: relative;
            z-index: 1;
        }

        .score-container {
            background-color: rgba(255, 255, 255, 0.12);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            max-width: 800px;
            width: 100%;
        }

        h1 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: var(--primary-color);
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            overflow: hidden;
            border-radius: 10px;
        }

        .table thead {
            background-color: #6c63ff;
            color: #fff;
        }

        .table th, .table td {
            padding: 1rem;
            text-align: center;
            font-size: 1rem;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .top-buttons {
            display: flex;
            justify-content: flex-end;
            padding: 1rem;
            gap: 1rem;
            position: relative;
            z-index: 2;
        }

        .top-buttons a {
            color: white;
            font-weight: bold;
            text-decoration: none;
            background-color: rgba(0,0,0,0.4);
            padding: 0.5rem 1rem;
            border-radius: 30px;
            transition: 0.3s ease;
        }

        .top-buttons a:hover {
            background-color: rgba(0,0,0,0.7);
        }

        @media screen and (max-width: 600px) {
            .table th, .table td {
                font-size: 0.9rem;
                padding: 0.7rem;
            }

            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
{% endblock %}

