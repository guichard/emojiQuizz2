{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        /* Classement - tableau des scores */

.container {
    max-width: 800px;
    margin: auto;
    padding: 2rem;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

h1 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #FF6B6B;
}

.table {
    width: 100%;
    border-collapse: collapse;
    overflow: hidden;
    border-radius: 10px;
}

.table thead {
    background-color: #6c63ff;
    color: #fff;
}

.table th, .table td {
    padding: 1rem;
    text-align: center;
    font-size: 1rem;
}

.table tbody tr {
    transition: background-color 0.3s ease;
}

.table tbody tr:hover {
    background-color: #f5f5f5;
}

.table-striped tbody tr:nth-child(odd) {
    background-color: #f9f9f9;
}

@media screen and (max-width: 600px) {
    .table th, .table td {
        font-size: 0.9rem;
        padding: 0.7rem;
    }

    h1 {
        font-size: 1.5rem;
    }
}
 .top-buttons {
            display: flex;
            justify-content: flex-end;
            padding: 1rem;
            gap: 1rem;
        }

        .top-buttons a {
            color: white;
            font-weight: bold;
            text-decoration: none;
            background-color: rgba(0,0,0,0.4);
            padding: 0.5rem 1rem;
            border-radius: 30px;
            transition: 0.3s ease;
        }

        .top-buttons a:hover {
            background-color: rgba(0,0,0,0.7);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="top-buttons">
        <a href="{{ path('app_acceuil') }}">üè† Accueil</a>
        <a href="{{ path('app_game_play') }}">üéÆ Jouer</a>
        <a href="{{ path('app_logout') }}">üö™ D√©connexion</a>
    </div>

        <h1>üèÜ Classement des meilleurs scores</h1>

        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Joueur</th>
                    <th>Score</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for score in meilleurs_scores %}
                    <tr>
                        <td>{{ score.user.email }}</td>
                        <td>{{ score.valeur }}</td>
                        <td>{{ score.datePartie|date('d/m/Y H:i') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun score enregistr√© pour le moment.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

