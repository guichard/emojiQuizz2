{% extends 'base.html.twig' %}

{% block title %}Emoji Quiz Game - It's in the Game{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #FF6B6B;
            --secondary-color: #4ECDC4;
            --dark-color: #292F36;
            --light-color: #F7FFF7;
            --accent-color: #FFE66D;
        }

        body {
            position: relative;
            z-index: 0;
            background-color:rgb(219, 224, 231);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            color: var(--dark-color);
            margin: 0;
            padding: 0;
        }

        .emoji-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
            z-index: 0;
        }

        .emoji-bg img {
            position: absolute;
            width: 60px;  /* Taille ajust√©e pour plus d'emojis visibles */
            height: 60px;
            opacity: 0.7;  /* Moins transparent pour plus de visibilit√© */
            animation: float 10s linear infinite;
        }

        @keyframes float {
            0% {
                transform: translateY(-100vh) rotate(0deg);
            }
            100% {
                transform: translateY(100vh) rotate(360deg);
            }
        }

        .game-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            box-sizing: border-box;
            position: relative;
            z-index: 1;
        }

        .game-container {
            background-color: rgba(255, 255, 255, 0.12);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 2rem;
            max-width: 800px;
            width: 100%;
            text-align: center;
        }

        .game-title {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 1rem;
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .game-slogan {
            font-size: 1.8rem;
            margin-bottom: 2rem;
            color: var(--dark-color);
        }

        .emoji-display {
            font-size: 5rem;
            margin: 2rem 0;
            animation: bounce 2s infinite;
        }

        .btn-game {
            background-color: var(--dark-color);
            color: white;
            border: none;
            padding: 1rem 2rem;
            font-size: 1.2rem;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-game:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            background-color: var(--primary-color);
        }

        .btn-start {
            background-color: var(--accent-color);
            color: var(--dark-color);
            font-weight: bold;
        }

        .game-features {
            display: flex;
            justify-content: space-around;
            margin: 3rem 0;
            flex-wrap: wrap;
        }

        .feature {
            flex: 1;
            min-width: 200px;
            margin: 1rem;
            padding: 1.5rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        footer {
            margin-top: 3rem;
            padding: 1rem;
            color: white;
            text-align: center;
        }

        .btn-question {
            display: inline-flex;
            align-items: center;
            padding: 12px 24px;
            background-color:rgb(38, 43, 42);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: bold;
            transition: all 0.3s;
            font-size: 1.1rem;
        }

        .btn-question:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(78, 205, 196, 0.3);
            background-color:rgb(31, 34, 34);
        }

        .top-buttons {
            display: flex;
            justify-content: flex-end;
            padding: 1rem;
            gap: 1rem;
            position: relative;
            z-index: 2;
        }

        .top-buttons a {
            color: white;
            font-weight: bold;
            text-decoration: none;
            background-color: rgba(0,0,0,0.4);
            padding: 0.5rem 1rem;
            border-radius: 30px;
            transition: 0.3s ease;
        }

        .top-buttons a:hover {
            background-color: rgba(0,0,0,0.7);
        }
    </style>
{% endblock %}

